@model Lab2DataModel

@{
	ViewData["Title"] = "Second one";
}

<h1>@ViewData["Title"]</h1>
<text> &nbsp; &nbsp; &nbsp;</text>
<h2>It was decided to cover a rectangular corridor N meters long and M meters wide with N rectangular tiles 1 meter wide and M meters long, so that there is no unpaved surface.
It is required to write a program that will find the number of ways to do this.</h2>

<text> &nbsp; &nbsp; &nbsp;</text>

<form method="post" enctype="multipart/form-data" asp-controller="Labs" asp-action="Lab2">
	<div class="form-group">
		<label for="psize">First number</label>
		<input type="text" class="form-control" id="number" asp-for="FirstInputNumber">
	</div>
	<div class="form-group">
		<label for="pdata">Second number</label>
		<input type="text" class="form-control" id="number" asp-for="SecondInputNumber">
	</div>
	<button type="submit" class="btn btn-primary mt-3">Submit</button>
</form>

<text> &nbsp; &nbsp; &nbsp;</text>
<text> &nbsp; &nbsp; &nbsp;</text>

@if (Model != null)
{
	<div class="container mt5">
		<div class="form-group">
			<h2>Result</h2>
			<h2 class="control-label">Output: @(Model != null ? Model.Calculated : string.Empty)</h2>
		</div>
		@if (Model != null && !string.IsNullOrEmpty(Model.ErrorValue))
		{
			<div class="row">
				<label for="perror"></label>
				<input type="text" id="perror" value="@Model.ErrorValue">
			</div>
		}
	</div>
}